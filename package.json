{
  "name": "nico-kuechler-portfolio",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "description": "A modern, responsive portfolio website for Nico Küchler, Senior Software Developer & Media Designer, built with React, TypeScript, and Vite.",
  "author": {
    "name": "Nico Küchler",
    "email": "mail@nico-kuechler.de",
    "url": "https://nico-kuechler.de"
  },
  "license": "MIT",
  "homepage": "https://nico-kuechler.de",
  "repository": {
    "type": "git",
    "url": "https://github.com/nico-kuechler/portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/nico-kuechler/portfolio/issues"
  },
  "keywords": [
    "portfolio",
    "react",
    "typescript",
    "vite",
    "responsive",
    "pwa",
    "frontend",
    "developer",
    "media-designer",
    "cv",
    "resume"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "serve": "vite preview --port 4173",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "build:prod": "npm run clean && npm run lint && npm run test && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "jsdom": "^26.1.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.46.0",
    "typescript": "^5.9.2",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  }
}
